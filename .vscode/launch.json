{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run phlow-runtime with current file test",
            "args": [
                "${relativeFile}",
                "--test"
            ],
            "cwd": "${workspaceFolder}",
            "cargo": {
                "args": [
                    "run",
                    "-p",
                    "phlow-runtime"
                ]
            },
            "env": {
                "PHLOW_LOG": "debug"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run phlow-runtime with current file runtime",
            "args": [
                "${relativeFile}"
            ],
            "cwd": "${workspaceFolder}",
            "cargo": {
                "args": [
                    "run",
                    "-p",
                    "phlow-runtime"
                ]
            },
            "env": {
                "PHLOW_LOG": "debug"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "RunAnalyzer with current file",
            "args": [
                "${relativeFile}",
                "--analyzer",
                "--all",
                "--no-run",
            ],
            "cwd": "${workspaceFolder}",
            "cargo": {
                "args": [
                    "run",
                    "-p",
                    "phlow-runtime"
                ]
            },
            "env": {
                "PHLOW_LOG": "debug"
            }
        },
        {
            "name": "Run Phlow Extension (examples)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/vscode-phlow",
                "${workspaceFolder}/vscode-phlow/examples"
            ],
            "outFiles": [],
            "env": {
                "PFLOW_DEBUG_BREAK": "1"
            }
        },
        {
            "name": "Run Phlow Extension (workspace)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/vscode-phlow"
            ],
            "outFiles": []
        }
    ]
}