    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'phlow'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=phlow"
                ],
                "filter": {
                    "name": "phlow",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run phlow-runtime with current file",
            "args": [
                "${relativeFile}",
                "--test"
            ],
            "cwd": "${workspaceFolder}",
            "cargo": {
                "args": [
                    "run",
                    "-p",
                    "phlow-runtime"
                ]
            }
        }
    ]
}