steps:
  - payload: main
  - assert: payload == 0
    return: payload
  - return: payload + 1

tests:  
  - describe: "Test setting and getting a simple string value"    
    main: 1
    assert: payload == 2

  - describe: "Test setting and getting a simple incremented value"    
    main: 3
    assert: payload != 2

  - describe: "Test setting and getting a zero value"    
    main: 0
    assert: payload == 0