{
    "scopeName": "source.phs",
    "name": "Phlow Script",
    "fileTypes": [
        "phs"
    ],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#booleans"
        },
        {
            "include": "#identifiers"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.phs",
                    "match": "//.*$"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.phs",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.phs",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.phs",
                    "begin": "'",
                    "end": "'"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.phs",
                    "match": "\\b\\d+(?:\\.\\d+)?\\b"
                }
            ]
        },
        "booleans": {
            "patterns": [
                {
                    "name": "constant.language.boolean.phs",
                    "match": "\\b(?:true|false|null|undefined)\\b"
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "name": "variable.other.phs",
                    "match": "\\b[A-Za-z_][A-Za-z0-9_\\.]*\\b"
                },
                {
                    "name": "punctuation.separator.phs",
                    "match": "[.,:;(){}\\[\\]]"
                },
                {
                    "name": "keyword.operator.phs",
                    "match": "(?:==|!=|<=|>=|<|>|\\+|\\-|\\*|/|\\%|\\?|:|=)"
                },
                {
                    "begin": "\\$\\{",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.section.interpolation.begin.phs"
                        }
                    },
                    "end": "\\}",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.section.interpolation.end.phs"
                        }
                    },
                    "name": "meta.interpolation.phs",
                    "patterns": [
                        {
                            "include": "#strings"
                        },
                        {
                            "include": "#numbers"
                        },
                        {
                            "include": "#booleans"
                        },
                        {
                            "include": "#identifiers"
                        }
                    ]
                }
            ]
        },
        "constants-values": {
            "patterns": [
                {
                    "match": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(\\b(?:main|modules|steps|envs|setup|input|args)\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "constant.language.phlow"
                        }
                    }
                },
                {
                    "match": "(\\.\\.\\.)(\\b(?:main|modules|steps|envs|setup|input|args)\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.separator.spread.phlow"
                        },
                        "2": {
                            "name": "constant.language.phlow"
                        }
                    }
                },
                {
                    "match": "(?m)^(\\s*-\\s*)(\\b(?:main|modules|steps|envs|setup|input|args)\\b)(?=\\s*$|\\s|,|\\])",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "constant.language.phlow"
                        }
                    }
                },
                {
                    "match": "\\b(?:main|modules|steps|envs|setup|input|args)\\b(?=\\[|\\.)",
                    "name": "constant.language.phlow"
                }
            ]
        }
    }
}