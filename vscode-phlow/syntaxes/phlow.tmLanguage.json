{
    "scopeName": "source.phlow",
    "name": "Phlow",
    "fileTypes": [
        "phlow"
    ],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#phs-directive-anywhere"
        },
        {
            "include": "#directives"
        },
        {
            "include": "#special-keys"
        },
        {
            "include": "#constants-values"
        },
        {
            "include": "#phs-fenced"
        },
        {
            "include": "#phs-brace-block"
        },
        {
            "include": "#phs-inline-dollar"
        },
        {
            "include": "#phs-inline-backtick"
        },
        {
            "include": "#phs-inline"
        },
        {
            "include": "#phs-auto-fenced"
        },
        {
            "include": "#phs-auto-inline-dollar"
        },
        {
            "include": "#phs-auto-inline-backtick"
        },
        {
            "include": "#phs-auto-brace"
        },
        {
            "include": "#phs-auto-inline"
        },
        {
            "include": "#keys"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#booleans"
        },
        {
            "include": "#objects"
        },
        {
            "include": "#arrays"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.phlow",
                    "match": "#.*$"
                }
            ]
        },
        "special-keys": {
            "patterns": [
                {
                    "//": "Core Phlow constant keys - these are always constants regardless of value type",
                    "match": "(?m)^(\\s*(?:-\\s*)?)\\b(main|modules|steps|envs|setup|input|args)\\b(?=\\s*:)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "constant.language.phlow"
                        }
                    }
                },
                {
                    "//": "Other Phlow structure keys",
                    "match": "(?m)^(\\s*(?:-\\s*)?)\\b(then|else|return|id|assert|with|payload|to|use|label)\\b(?=\\s*:)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.control.phlow"
                        }
                    }
                },
                {
                    "//": "HTTP specific keys",
                    "match": "(?m)^(\\s*(?:-\\s*)?)\\b(status_code|body|headers|method|path|query|params)\\b(?=\\s*:)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.other.http.phlow"
                        }
                    }
                },
                {
                    "//": "Module configuration keys",
                    "match": "(?m)^(\\s*(?:-\\s*)?)\\b(module|type|repository|license|tags|required|properties|default|enum)\\b(?=\\s*:)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.other.module.phlow"
                        }
                    }
                }
            ]
        },
        "constants-values": {
            "patterns": [
                {
                    "//": "Match core phlow constant names when used as values after a key",
                    "match": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(\\b(?:main|modules|steps|envs|setup|input|args)\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "constant.language.phlow"
                        }
                    }
                },
                {
                    "//": "Ellipsis/spread usage inside arrays/objects: ...main or ...envs",
                    "match": "(\\.\\.\\.)(\\b(?:main|modules|steps|envs|setup|input|args)\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.separator.spread.phlow"
                        },
                        "2": {
                            "name": "constant.language.phlow"
                        }
                    }
                },
                {
                    "//": "Standalone values in arrays or bare values (e.g., - main)",
                    "match": "(?m)^(\\s*-\\s*)(\\b(?:main|modules|steps|envs|setup|input|args)\\b)(?=\\s*$|\\s|,|\\])",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "constant.language.phlow"
                        }
                    }
                },
                {
                    "//": "Property access like main[0] or envs.foo",
                    "match": "\\b(?:main|modules|steps|envs|setup|input|args)\\b(?=\\[|\\.)",
                    "name": "constant.language.phlow"
                }
            ]
        },
        "keys": {
            "patterns": [
                {
                    "//": "dash list-item keys like '- id:' capture the key in group 2 and assign entity.name.tag.phlow",
                    "match": "(?m)^(\\s*)(?:-\\s*)([a-zA-Z0-9_\\-\\.]+)(?=\\s*:)",
                    "captures": {
                        "2": {
                            "name": "entity.name.tag.phlow"
                        }
                    }
                },
                {
                    "//": "regular property keys at start of line (without leading '-')",
                    "match": "(?m)^(\\s*)([a-zA-Z0-9_\\-\\.]+)(?=\\s*:)",
                    "captures": {
                        "2": {
                            "name": "entity.name.tag.phlow"
                        }
                    }
                }
            ]
        },
        "directives": {
            "patterns": [
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)(!include)\\b",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.directive.include.phlow"
                        }
                    },
                    "end": "$",
                    "name": "meta.directive.include.phlow",
                    "patterns": [
                        {
                            "include": "#directive-values"
                        }
                    ]
                },
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)(!import)\\b",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.directive.import.phlow"
                        }
                    },
                    "end": "$",
                    "name": "meta.directive.import.phlow",
                    "patterns": [
                        {
                            "include": "#directive-values"
                        }
                    ]
                },
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)(!phs)\\b",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.directive.phs.phlow"
                        }
                    },
                    "end": "$",
                    "name": "meta.embedded.inline.phs",
                    "contentName": "source.rhai",
                    "patterns": [
                        {
                            "include": "source.rhai"
                        }
                    ]
                },
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)(!arg)\\b",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.directive.arg.phlow"
                        }
                    },
                    "end": "$",
                    "name": "meta.directive.arg.phlow",
                    "patterns": [
                        {
                            "include": "#directive-values"
                        }
                    ]
                }
            ]
        },
        "directive-values": {
            "patterns": [
                {
                    "//": "arg pairs like name=value (value can be quoted or unquoted)",
                    "match": "(?x)([A-Za-z0-9_\\-\\.]+)(\\s*=\\s*)(\"[^\"]*\"|'[^']*'|[^\\s]+)",
                    "captures": {
                        "1": {
                            "name": "variable.parameter.phlow"
                        },
                        "2": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "3": {
                            "name": "string.unquoted.or.quoted.phlow"
                        }
                    }
                },
                {
                    "//": "double quoted path/value",
                    "match": "\"[^\"]+\"",
                    "name": "string.quoted.double.phlow"
                },
                {
                    "//": "single quoted path/value",
                    "match": "'[^']+'",
                    "name": "string.quoted.single.phlow"
                },
                {
                    "//": "unquoted path/value (single token)",
                    "match": "[^\\s]+",
                    "name": "string.unquoted.path.phlow"
                }
            ]
        },
        "phs-directive-anywhere": {
            "match": "(!phs)\\b",
            "captures": {
                "1": {
                    "name": "keyword.directive.phs.phlow"
                }
            }
        },
        "phs-auto-fenced": {
            "begin": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(```|\\r?\\n\\s*```)",
            "beginCaptures": {
                "1": {
                    "name": "punctuation.whitespace.leading.phlow"
                },
                "2": {
                    "name": "entity.name.tag.phlow"
                },
                "3": {
                    "name": "punctuation.separator.key-value.phlow"
                },
                "4": {
                    "name": "punctuation.definition.fenced.begin.phs"
                }
            },
            "end": "```",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.fenced.end.phs"
                }
            },
            "name": "meta.embedded.block.phs",
            "contentName": "source.rhai",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-fenced": {
            "begin": "!phs\\s*```",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.fenced.begin.phs"
                }
            },
            "end": "```",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.fenced.end.phs"
                }
            },
            "name": "meta.embedded.block.phs",
            "contentName": "source.rhai",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-brace-block": {
            "begin": "!phs\\s*\\{",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.section.block.begin.phs"
                }
            },
            "end": "\\}",
            "endCaptures": {
                "0": {
                    "name": "punctuation.section.block.end.phs"
                }
            },
            "name": "meta.embedded.block.phs",
            "contentName": "source.rhai",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-inline-dollar": {
            "begin": "!phs\\s*\\$\\{",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.section.block.begin.phs"
                }
            },
            "end": "\\}",
            "endCaptures": {
                "0": {
                    "name": "punctuation.section.block.end.phs"
                }
            },
            "name": "meta.embedded.block.phs",
            "contentName": "source.rhai",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-inline-backtick": {
            "begin": "!phs\\s*`",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.inline.phs"
                }
            },
            "end": "`",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.inline.phs"
                }
            },
            "name": "meta.embedded.inline.phs",
            "contentName": "source.rhai",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-auto-brace": {
            "begin": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(\\{)",
            "beginCaptures": {
                "1": {
                    "name": "punctuation.whitespace.leading.phlow"
                },
                "2": {
                    "name": "entity.name.tag.phlow"
                },
                "3": {
                    "name": "punctuation.separator.key-value.phlow"
                },
                "4": {
                    "name": "punctuation.section.block.begin.phs"
                }
            },
            "end": "\\}",
            "endCaptures": {
                "0": {
                    "name": "punctuation.section.block.end.phs"
                }
            },
            "name": "meta.embedded.block.phs",
            "contentName": "source.rhai",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-auto-inline-dollar": {
            "begin": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(\\$\\{|\\r?\\n\\s*\\$\\{)",
            "beginCaptures": {
                "1": {
                    "name": "punctuation.whitespace.leading.phlow"
                },
                "2": {
                    "name": "entity.name.tag.phlow"
                },
                "3": {
                    "name": "punctuation.separator.key-value.phlow"
                },
                "4": {
                    "name": "punctuation.section.block.begin.phs"
                }
            },
            "end": "\\}",
            "endCaptures": {
                "0": {
                    "name": "punctuation.section.block.end.phs"
                }
            },
            "name": "meta.embedded.block.phs",
            "contentName": "source.rhai",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-auto-inline": {
            "patterns": [
                {
                    "//": "Boolean values",
                    "match": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(\\b(?:true|false|null|undefined)\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "constant.language.boolean.phlow"
                        }
                    }
                },
                {
                    "//": "Numeric values",
                    "match": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)([-+]?\\b\\d+(?:\\.\\d+)?(?:[eE][-+]?\\d+)?\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "constant.numeric.phlow"
                        }
                    }
                },
                {
                    "//": "HTTP status codes (special numeric case)",
                    "match": "(?m)^(\\s*(?:-\\s*)?)\\b(status_code)\\b(\\s*:\\s*)(\\b[1-5]\\d{2}\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.other.http.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "constant.numeric.http-status.phlow"
                        }
                    }
                },
                {
                    "//": "Special enum values for main key - module types (only when main is the key)",
                    "match": "(?m)^(\\s*(?:-\\s*)?)\\b(main)\\b(\\s*:\\s*)(\\b(?:http_server|cli|amqp|rpc|postgres|openai|jwt|cache|sleep|log|echo)\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "constant.language.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "constant.other.enum.phlow"
                        }
                    }
                },
                {
                    "//": "HTTP methods as enum values",
                    "match": "(?m)^(\\s*(?:-\\s*)?)\\b(method)\\b(\\s*:\\s*)(\\b(?:GET|POST|PUT|DELETE|PATCH|HEAD|OPTIONS|TRACE|CONNECT)\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.other.http.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "constant.other.enum.http-method.phlow"
                        }
                    }
                },
                {
                    "//": "Data types as enum values",
                    "match": "(?m)^(\\s*(?:-\\s*)?)\\b(type)\\b(\\s*:\\s*)(\\b(?:string|number|boolean|object|array|null|integer|float|main|step)\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.other.module.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "constant.other.enum.data-type.phlow"
                        }
                    }
                },
                {
                    "//": "AMQP exchange types as enum values",
                    "match": "(?m)^(\\s*(?:-\\s*)?)\\b(exchange_type|destination_type)\\b(\\s*:\\s*)(\\b(?:direct|fanout|topic|headers|queue|exchange)\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "constant.other.enum.amqp.phlow"
                        }
                    }
                },
                {
                    "//": "Version strings (latest and semantic versions)",
                    "match": "(?m)^(\\s*(?:-\\s*)?)\\b(version)\\b(\\s*:\\s*)(\\b(?:latest|\\d+(?:\\.\\d+)*(?:-[a-zA-Z0-9]+)*)\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.other.module.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "constant.other.enum.version.phlow"
                        }
                    }
                },
                {
                    "//": "Content-Type MIME types as enum values",
                    "match": "(?m)^(\\s*(?:-\\s*)?)\\b(Content-Type)\\b(\\s*:\\s*)(\\b(?:application/json|application/xml|text/html|text/plain|application/form-data|multipart/form-data)\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "constant.other.enum.mime-type.phlow"
                        }
                    }
                },
                {
                    "//": "Simple unquoted string values (excluding keywords and detected enums)",
                    "match": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(?!(?:\\s*(?:if|for|while|loop|match|let|const|fn|return|switch|case|default|try|catch|throw|when|payload|input|steps|setup|envs|!phs|\\{|\\[|true|false|null|undefined|\\d|http_server|cli|amqp|rpc|postgres|GET|POST|PUT|DELETE|string|number|boolean|object|array|direct|fanout|topic|latest|application/json)))([A-Za-z0-9_\\-\\./]+)(?=\\s*$)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "string.unquoted.phlow"
                        }
                    }
                },
                {
                    "//": "PHS expressions and keywords",
                    "begin": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(?=\\s*(?:if|for|while|loop|match|let|const|fn|return|switch|case|default|try|catch|throw|when|payload)\\b)",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        }
                    },
                    "end": "$",
                    "name": "meta.embedded.inline.phs",
                    "contentName": "source.rhai",
                    "patterns": [
                        {
                            "include": "#phs-directive-anywhere"
                        },
                        {
                            "include": "source.rhai"
                        }
                    ]
                }
            ]
        },
        "phs-auto-inline-backtick": {
            "begin": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(`|\\r?\\n\\s*`)",
            "beginCaptures": {
                "1": {
                    "name": "punctuation.whitespace.leading.phlow"
                },
                "2": {
                    "name": "entity.name.tag.phlow"
                },
                "3": {
                    "name": "punctuation.separator.key-value.phlow"
                },
                "4": {
                    "name": "punctuation.definition.inline.phs"
                }
            },
            "end": "`",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.inline.phs"
                }
            },
            "name": "meta.embedded.inline.phs",
            "contentName": "source.rhai",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-inline": {
            "patterns": [
                {
                    "begin": "!phs\\s+",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.inline.phs"
                        }
                    },
                    "end": "$",
                    "name": "meta.embedded.inline.phs",
                    "contentName": "source.rhai",
                    "patterns": [
                        {
                            "include": "source.rhai"
                        }
                    ]
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.phlow",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.phlow",
                            "match": "\\\\."
                        },
                        {
                            "//": "Template variables in strings",
                            "match": "\\$\\{[^}]+\\}",
                            "name": "variable.other.template.phlow"
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.phlow",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
