{
    "scopeName": "source.phlow",
    "name": "Phlow",
    "fileTypes": [
        "phlow"
    ],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#phs-directive-anywhere"
        },
        {
            "include": "#directives"
        },
        {
            "include": "#phs-fenced"
        },
        {
            "include": "#phs-brace-block"
        },
        {
            "include": "#phs-inline-dollar"
        },
        {
            "include": "#phs-inline-backtick"
        },
        {
            "include": "#phs-inline"
        },
        {
            "include": "#phs-auto-fenced"
        },
        {
            "include": "#phs-auto-inline-dollar"
        },
        {
            "include": "#phs-auto-inline-backtick"
        },
        {
            "include": "#phs-auto-brace"
        },
        {
            "include": "#phs-auto-inline"
        },
        {
            "include": "#keys"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#booleans"
        },
        {
            "include": "#objects"
        },
        {
            "include": "#arrays"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.phlow",
                    "match": "#.*$"
                }
            ]
        },
        "keys": {
            "patterns": [
                {
                    "//": "dash list-item keys like '- id:' capture the key in group 2 and assign entity.name.tag.phlow",
                    "match": "(?m)^(\\s*)(?:-\\s*)([a-zA-Z0-9_\\-\\.]+)(?=\\s*:)",
                    "captures": {
                        "2": {
                            "name": "entity.name.tag.phlow"
                        }
                    }
                },
                {
                    "//": "regular property keys at start of line (without leading '-')",
                    "match": "(?m)^(\\s*)([a-zA-Z0-9_\\-\\.]+)(?=\\s*:)",
                    "captures": {
                        "2": {
                            "name": "entity.name.tag.phlow"
                        }
                    }
                }
            ]
        },
        "directives": {
            "patterns": [
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)(!include)\\b",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.directive.include.phlow"
                        }
                    },
                    "end": "$",
                    "name": "meta.directive.include.phlow",
                    "patterns": [
                        {
                            "include": "#directive-values"
                        }
                    ]
                },
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)(!import)\\b",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.directive.import.phlow"
                        }
                    },
                    "end": "$",
                    "name": "meta.directive.import.phlow",
                    "patterns": [
                        {
                            "include": "#directive-values"
                        }
                    ]
                },
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)(!phs)\\b",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.directive.phs.phlow"
                        }
                    },
                    "end": "$",
                    "name": "meta.embedded.inline.phs",
                    "patterns": [
                        {
                            "include": "source.rhai"
                        }
                    ]
                },
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)(!arg)\\b",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "keyword.directive.arg.phlow"
                        }
                    },
                    "end": "$",
                    "name": "meta.directive.arg.phlow",
                    "patterns": [
                        {
                            "include": "#directive-values"
                        }
                    ]
                }
            ]
        },
        "directive-values": {
            "patterns": [
                {
                    "//": "arg pairs like name=value (value can be quoted or unquoted)",
                    "match": "(?x)([A-Za-z0-9_\\-\\.]+)(\\s*=\\s*)(\"[^\"]*\"|'[^']*'|[^\\s]+)",
                    "captures": {
                        "1": {
                            "name": "variable.parameter.phlow"
                        },
                        "2": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "3": {
                            "name": "string.unquoted.or.quoted.phlow"
                        }
                    }
                },
                {
                    "//": "double quoted path/value",
                    "match": "\"[^\"]+\"",
                    "name": "string.quoted.path.phlow"
                },
                {
                    "//": "single quoted path/value",
                    "match": "'[^']+'",
                    "name": "string.quoted.path.phlow"
                },
                {
                    "//": "unquoted path/value (single token)",
                    "match": "[^\\s]+",
                    "name": "string.unquoted.path.phlow"
                }
            ]
        },
        "phs-directive-anywhere": {
            "match": "(!phs)\\b",
            "captures": {
                "1": {
                    "name": "keyword.directive.phs.phlow"
                }
            }
        },
        "phs-auto-fenced": {
            "begin": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(```|\\r?\\n\\s*```)",
            "beginCaptures": {
                "1": {
                    "name": "punctuation.whitespace.leading.phlow"
                },
                "2": {
                    "name": "entity.name.tag.phlow"
                },
                "3": {
                    "name": "punctuation.separator.key-value.phlow"
                },
                "4": {
                    "name": "punctuation.definition.fenced.begin.phs"
                }
            },
            "end": "```",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.fenced.end.phs"
                }
            },
            "name": "meta.embedded.block.phs",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-fenced": {
            "begin": "!phs\\s*```",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.fenced.begin.phs"
                }
            },
            "end": "```",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.fenced.end.phs"
                }
            },
            "name": "meta.embedded.block.phs",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-brace-block": {
            "begin": "!phs\\s*\\{",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.section.block.begin.phs"
                }
            },
            "end": "\\}",
            "endCaptures": {
                "0": {
                    "name": "punctuation.section.block.end.phs"
                }
            },
            "name": "meta.embedded.block.phs",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-inline-dollar": {
            "begin": "!phs\\s*\\$\\{",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.section.block.begin.phs"
                }
            },
            "end": "\\}",
            "endCaptures": {
                "0": {
                    "name": "punctuation.section.block.end.phs"
                }
            },
            "name": "meta.embedded.block.phs",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-inline-backtick": {
            "begin": "!phs\\s*`",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.inline.phs"
                }
            },
            "end": "`",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.inline.phs"
                }
            },
            "name": "meta.embedded.inline.phs",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-auto-brace": {
            "begin": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(\\{)",
            "beginCaptures": {
                "1": {
                    "name": "punctuation.whitespace.leading.phlow"
                },
                "2": {
                    "name": "entity.name.tag.phlow"
                },
                "3": {
                    "name": "punctuation.separator.key-value.phlow"
                },
                "4": {
                    "name": "punctuation.section.block.begin.phs"
                }
            },
            "end": "\\}",
            "endCaptures": {
                "0": {
                    "name": "punctuation.section.block.end.phs"
                }
            },
            "name": "meta.embedded.block.phs",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-auto-inline-dollar": {
            "begin": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(\\$\\{|\\r?\\n\\s*\\$\\{)",
            "beginCaptures": {
                "1": {
                    "name": "punctuation.whitespace.leading.phlow"
                },
                "2": {
                    "name": "entity.name.tag.phlow"
                },
                "3": {
                    "name": "punctuation.separator.key-value.phlow"
                },
                "4": {
                    "name": "punctuation.section.block.begin.phs"
                }
            },
            "end": "\\}",
            "endCaptures": {
                "0": {
                    "name": "punctuation.section.block.end.phs"
                }
            },
            "name": "meta.embedded.block.phs",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-auto-inline": {
            "patterns": [
                {
                    "match": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(\\b(?:true|false|null|undefined)\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "constant.language.boolean.phlow"
                        }
                    }
                },
                {
                    "match": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(\\b\\d+(?:\\.\\d+)?\\b)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "constant.numeric.phlow"
                        }
                    }
                },
                {
                    "match": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(?!(?:\\s*(?:if|for|while|loop|match|let|const|fn|return|switch|case|default|try|catch|throw|when|payload|input|steps|main|setup|envs|!phs|\\{|\\[|true|false|null|undefined)))([A-Za-z0-9_\\-\\.]+)",
                    "captures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        },
                        "4": {
                            "name": "string.unquoted.phlow"
                        }
                    }
                },
                {
                    "begin": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(?:(?=\\s*(?:if|for|while|loop|match|let|const|fn|return|switch|case|default|try|catch|throw|when|payload|input|steps|main|setup|envs)\\b)|(?=\\s*(?!(!phs|\\{|\\[))))",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.leading.phlow"
                        },
                        "2": {
                            "name": "entity.name.tag.phlow"
                        },
                        "3": {
                            "name": "punctuation.separator.key-value.phlow"
                        }
                    },
                    "end": "$",
                    "name": "meta.embedded.inline.phs",
                    "patterns": [
                        {
                            "include": "#phs-directive-anywhere"
                        },
                        {
                            "include": "source.rhai"
                        }
                    ]
                }
            ]
        },
        "phs-auto-inline-backtick": {
            "begin": "(?m)^(\\s*(?:-\\s*)?)([a-zA-Z0-9_\\-\\.]+)(\\s*:\\s*)(`|\\r?\\n\\s*`)",
            "beginCaptures": {
                "1": {
                    "name": "punctuation.whitespace.leading.phlow"
                },
                "2": {
                    "name": "entity.name.tag.phlow"
                },
                "3": {
                    "name": "punctuation.separator.key-value.phlow"
                },
                "4": {
                    "name": "punctuation.definition.inline.phs"
                }
            },
            "end": "`",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.inline.phs"
                }
            },
            "name": "meta.embedded.inline.phs",
            "patterns": [
                {
                    "include": "source.rhai"
                }
            ]
        },
        "phs-inline": {
            "patterns": [
                {
                    "begin": "!phs\\s+",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.inline.phs"
                        }
                    },
                    "end": "$",
                    "name": "meta.embedded.inline.phs",
                    "patterns": [
                        {
                            "include": "source.rhai"
                        }
                    ]
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.phlow",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.phlow",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.phlow",
                    "begin": "'",
                    "end": "'"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.phlow",
                    "match": "\\b\\d+(?:\\.\\d+)?\\b"
                }
            ]
        },
        "booleans": {
            "patterns": [
                {
                    "name": "constant.language.boolean.phlow",
                    "match": "\\b(?:true|false|null|undefined)\\b"
                }
            ]
        },
        "objects": {
            "begin": "\\{",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.section.object.begin.phlow"
                }
            },
            "end": "\\}",
            "endCaptures": {
                "0": {
                    "name": "punctuation.section.object.end.phlow"
                }
            },
            "name": "meta.structure.object.phlow",
            "patterns": [
                {
                    "include": "#strings"
                },
                {
                    "include": "#numbers"
                },
                {
                    "include": "#booleans"
                },
                {
                    "include": "#phs-inline"
                }
            ]
        },
        "arrays": {
            "begin": "\\[",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.section.array.begin.phlow"
                }
            },
            "end": "\\]",
            "endCaptures": {
                "0": {
                    "name": "punctuation.section.array.end.phlow"
                }
            },
            "name": "meta.structure.array.phlow",
            "patterns": [
                {
                    "include": "#strings"
                },
                {
                    "include": "#numbers"
                },
                {
                    "include": "#booleans"
                },
                {
                    "include": "#phs-inline"
                }
            ]
        }
    }
}