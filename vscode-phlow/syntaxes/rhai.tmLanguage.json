{
    "scopeName": "source.rhai",
    "name": "Rhai",
    "fileTypes": [
        "rhai"
    ],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.rhai",
                    "match": "//.*$"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.rhai",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.rhai",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.rhai",
                    "begin": "'",
                    "end": "'"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.rhai",
                    "match": "\\b\\d+(?:\\.\\d+)?\\b"
                }
            ]
        }
    }
}