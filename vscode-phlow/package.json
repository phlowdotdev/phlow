{
    "name": "phlow-vscode",
    "displayName": "Phlow",
    "publisher": "lowcarboncode",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.60.0"
    },
    "main": "extension.js",
    "activationEvents": [
        "onLanguage:phlow"
    ],
    "contributes": {
        "languages": [
            {
                "id": "phlow",
                "aliases": [
                    "Phlow",
                    "phlow"
                ],
                "extensions": [
                    ".phlow"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "phlow",
                "scopeName": "source.phlow",
                "path": "./syntaxes/phlow.tmLanguage.json"
            }
        ],
        "tokenColors": [
            {
                "scope": "string.quoted.double.phlow",
                "settings": {
                    "foreground": "#CE9178"
                }
            },
            {
                "scope": "string.quoted.single.phlow",
                "settings": {
                    "foreground": "#CE9178"
                }
            },
            {
                "scope": "string.template.phlow",
                "settings": {
                    "foreground": "#CE9178"
                }
            },
            {
                "scope": "constant.numeric.phlow",
                "settings": {
                    "foreground": "#B5CEA8"
                }
            },
            {
                "scope": "constant.language.boolean.phlow",
                "settings": {
                    "foreground": "#569CD6"
                }
            },
            {
                "scope": "punctuation.section.array.begin.phlow",
                "settings": {
                    "foreground": "#D7BA7D"
                }
            },
            {
                "scope": "punctuation.section.array.end.phlow",
                "settings": {
                    "foreground": "#D7BA7D"
                }
            },
            {
                "scope": "punctuation.section.object.begin.phlow",
                "settings": {
                    "foreground": "#D7BA7D"
                }
            },
            {
                "scope": "punctuation.section.object.end.phlow",
                "settings": {
                    "foreground": "#D7BA7D"
                }
            },
            {
                "scope": "meta.structure.array.phlow",
                "settings": {
                    "foreground": "#D7BA7D"
                }
            },
            {
                "scope": "meta.structure.object.phlow",
                "settings": {
                    "foreground": "#D7BA7D"
                }
            },
            {
                "scope": "support.module.phlow",
                "settings": {
                    "foreground": "#C586C0",
                    "fontStyle": "bold"
                }
            }
        ],
        "configuration": {
            "title": "Phlow",
            "properties": {
                "phlow.stepsRainbow.colors": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "rgba(230,57,70,0.05)",
                        "rgba(251,133,0,0.05)",
                        "rgba(255,209,102,0.05)",
                        "rgba(6,214,160,0.05)",
                        "rgba(17,138,178,0.05)"
                    ],
                    "description": "Array of CSS color strings used as translucent background colors for items inside steps blocks. The colors are applied cyclically."
                },
                "phlow.keys.color": {
                    "type": "string",
                    "default": "#ffffff",
                    "description": "Foreground color used for all keys (e.g. id:, payload:, action:). Use any CSS color string."
                }
            }
        }
    },
    "scripts": {
        "test": "echo \"No tests\" && exit 0",
        "test-grammar": "node ./test/grammar.test.js",
        "test-key": "node test/key_value.test.js",
        "test-brace": "node test/brace_block.test.js",
        "test-key-dash": "node test/key_dash.test.js"
    },
    "license": "MIT",
    "devDependencies": {
        "vscode-textmate": "^5.3.0",
        "onigasm": "^2.2.1"
    }
}